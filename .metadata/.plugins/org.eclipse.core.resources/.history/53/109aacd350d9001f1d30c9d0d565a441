#include "app.h"

// 외부 장치 선언
extern UART_HandleTypeDef huart2;
extern I2C_HandleTypeDef hi2c1;

void app(){
	// uart 초기화
	initUart(&huart2);
	while(1){
		printf("i2c address search...\n");
		for(int add=0; add<256; add++){
			int result = HAL_I2C_IsDeviceReady(&hi2c1, add, 0, 1);
			if(result == HAL_OK){
				printf("search address = 0x%02x\n",add);
			}
		}
		printf("address end\n");
		while(1);
	}
}
